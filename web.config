<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server/src/index.ts" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="Node.js App">
          <match url="/*" />
          <action type="Rewrite" url="server/src/index.ts" />
        </rule>
      </rules>
    </rewrite>
    <iisnode node_env="production" />
  </system.webServer>
</configuration>
